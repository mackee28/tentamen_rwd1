          li#original-products
            a(href='#products')
              i.fa.fa-plus
              | Produkter
            ul#submenu-products
              li
                a(href='#products')
                  i.fa.fa-plus
                  | Proteinpulver
                ul#submenu-protein
                  li
                    a(href='#plus') - Protein Plus NY!
                  li
                    a(href='#basic') - Protein Basic
          li
            a(href='#about') Om oss
          li
